{
  "name": "real-debrid",
  "displayName": "Real-Debrid Manager",
  "version": "0.0.1",
  "description": "Real-Debrid browser extension for link unrestriction and torrent management",
  "author": "meshal",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "dev:safari": "plasmo dev --target=safari-mv3",
    "build:safari": "plasmo build --target=safari-mv3"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "contextMenus",
      "storage",
      "notifications",
      "alarms",
      "activeTab",
      "scripting",
      "downloads"
    ]
  }
}
